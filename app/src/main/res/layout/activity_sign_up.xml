<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.auth.SignUpActivity"
    android:background="?backgroundColor"
    >
    <include layout="@layout/layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbarThumbVertical="@null"
        android:isScrollContainer="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_AccessAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textColor="?colorSecondary"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/rubik_medium"
                android:layout_gravity="center_horizontal"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:id="@+id/input_FullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColorHint="?colorSecondaryVariant"
                app:boxStrokeColor="@color/input_text_selector"
                app:boxStrokeWidth="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:hintTextColor="?colorSecondaryVariant"
                app:endIconTint="?colorSecondaryVariant"
                app:endIconMode="clear_text"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:fontFamily="@font/rubik_medium"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="?colorSecondaryVariant"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:id="@+id/input_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColorHint="?colorSecondaryVariant"
                app:boxStrokeColor="@color/input_text_selector"
                app:boxStrokeWidth="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:hintTextColor="?colorSecondaryVariant"
                app:endIconTint="?colorSecondaryVariant"
                app:endIconMode="clear_text"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:fontFamily="@font/rubik_medium"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="?colorSecondaryVariant"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:id="@+id/input_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="?colorSecondaryVariant"
                app:boxStrokeColor="@color/input_text_selector"
                app:boxStrokeWidth="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:hintTextColor="?colorSecondaryVariant"
                app:endIconMode="password_toggle"
                app:endIconTint="?colorSecondaryVariant"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:fontFamily="@font/rubik_medium"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="?colorSecondaryVariant"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/LoginTextInputLayoutStyle"
                android:id="@+id/input_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="?colorSecondaryVariant"
                app:boxStrokeColor="@color/input_text_selector"
                app:boxStrokeWidth="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:hintTextColor="?colorSecondaryVariant"
                app:endIconMode="password_toggle"
                app:endIconTint="?colorSecondaryVariant"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:fontFamily="@font/rubik_medium"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="?colorSecondaryVariant"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:id="@+id/layout_signUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_btn_round">
                <TextView
                    android:id="@+id/txt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Sign up"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Already have an account ?"
                    android:textColor="?colorSecondaryVariant"
                    android:textSize="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/text_signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Sign In"
                    android:textStyle="bold"
                    android:textColor="?colorSecondaryVariant"
                    android:textSize="@dimen/_9sdp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/shadow_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        android:alpha="0.25"
        android:visibility="gone"
        />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loading"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/loader"
        android:visibility="gone"
        />
</RelativeLayout>