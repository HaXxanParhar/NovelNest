<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    >

    <RelativeLayout
        android:id="@+id/layout_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/layout_novel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            >

            <RelativeLayout
                android:id="@+id/layout_novelBg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_light_gray_rounded_message"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_novel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/text_todo"
                android:src="@drawable/novel"
                app:riv_corner_radius="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/txt_novelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_10sdp"
            android:text="My Novels"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/layout_novel"
            />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_novelName"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rubik_bold"
            android:text="2 days ago"
            android:textColor="@color/dark_gray_Color"
            android:textSize="@dimen/_7sdp" />

    </RelativeLayout>
    


</RelativeLayout>