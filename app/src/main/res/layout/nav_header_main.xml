<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_156sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?backgroundColor"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_ProfileImage"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/default_place_holder" />
    <TextView
        android:id="@+id/text_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_ProfileImage"
        android:text="Muhammad Ans"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/rubik_medium"
        android:textColor="?colorSecondary"
        />
    <ImageView
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_toEndOf="@id/text_userName"
        android:layout_centerVertical="true"

        app:tint="?colorSecondary"
        />
</RelativeLayout>