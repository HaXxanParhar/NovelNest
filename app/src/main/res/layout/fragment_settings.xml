<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_profileBg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/AppColor">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_profile"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/novel"
                    app:riv_corner_radius="@dimen/_16sdp" />

                <LinearLayout
                    android:id="@+id/layout_profileDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image_profile"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:fontFamily="@font/rubik_regular"
                        android:text="Muhammad Shahid"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/txt_countryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/rubik_regular"
                        android:text="Pakistan"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_favoriteNovels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_profileBg"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_homeIc"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_homeIc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/home_ic"
                        app:tint="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_favoriteNovel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_homeIc">

                    <TextView
                        android:id="@+id/txt_favoriteNovel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Favorites Novels"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_off"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowFavoriteNovel"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_lineFavoriteNovel"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/layout_favoriteNovel"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_userEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_favoriteNovels"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_user"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_black"
                        app:tint="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_editProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_user">

                    <TextView
                        android:id="@+id/txt_editProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_off"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrow"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/layout_user"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_mainBecomeAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_userEditProfile"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_author"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_author_sign"
                        app:tint="@color/colorDoveGray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_becomeAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_author">

                    <TextView
                        android:id="@+id/txt_becomeAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Become an author"
                        android:textColor="@color/colorDoveGray"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowAuthor"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/colorDoveGray" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_lineAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/layout_author"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_mainUploadNovel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_mainBecomeAuthor"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_novel"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_novel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/novels_ic" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_uploadNovel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_novel">

                    <TextView
                        android:id="@+id/txt_uploadNovel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Upload Novel"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_off"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowNovel"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_lineNovel"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/layout_novel"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_padlockChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_mainUploadNovel"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_padlock"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_padlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_padlock_black"
                        app:tint="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_padlock">

                    <TextView
                        android:id="@+id/txt_changePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Change Password"
                        android:textColor="@color/black"
                        android:textColorHint="?colorPrimary"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowChange"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_lineChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_below="@id/layout_changePassword"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_socialChangeLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_padlockChangePassword"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/layout_socialNetwork"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_socialNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_social_network"
                        app:tint="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_changeLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_socialNetwork">

                    <TextView
                        android:id="@+id/txt_changeLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Change Language"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowChangeLanguage"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_lineChangeLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_below="@id/layout_changeLanguage"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_deleteYourAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_socialChangeLanguage"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_delete"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_deleteAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_delete">

                    <TextView
                        android:id="@+id/txt_deleteAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Delete Account"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowDeleteAccount"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_lineDeleteAccount"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_below="@id/layout_deleteAccount"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_shareAppMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_deleteYourAccount"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_shareAppImage"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_shareProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_share_profile"
                        app:tint="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_shareApp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_shareAppImage">

                    <TextView
                        android:id="@+id/txt_shareApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Share App"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowShareProfile"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_lineShareProfile"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_below="@id/layout_shareApp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_privacyPolicyCopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_shareAppMain"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_copy"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_copy"
                        app:tint="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_privacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_copy">

                    <TextView
                        android:id="@+id/txt_privacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Privacy Policy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowPrivacy"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/forward_arrow"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_linePrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_below="@id/layout_privacyPolicy"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_contactUsAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_privacyPolicyCopy"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/layout_at"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginVertical="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_surface_rounded_4dp"
                    android:elevation="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/image_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_at"
                        app:tint="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_contactUs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/layout_at">

                    <TextView
                        android:id="@+id/txt_contactUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/image_forwardArrowContactUs"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
