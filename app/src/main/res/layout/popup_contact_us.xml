<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_1sdp"
    app:cardBackgroundColor="@color/lightGray"
    app:cardCornerRadius="@dimen/_7sdp"
    android:background="@drawable/white_bg_rounded_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_grey_rounded_4dp">

        <RelativeLayout
            android:id="@+id/layout_contactUs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/white_bg_rounded_4dp"
            android:elevation="@dimen/_2sdp">

            <TextView
                android:id="@+id/text_contactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rubik_medium"
                android:text="Contact Us"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_below="@id/layout_contactUs"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/white_bg_grey_outline_rounded_4dp"
            android:elevation="@dimen/_1sdp">

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_31sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center_vertical"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/dark_gray_Color"
                android:textColorHint="@color/dark_gray_Color"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_subject"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_below="@id/layout_email"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/white_bg_grey_outline_rounded_4dp"
            android:elevation="@dimen/_1sdp">

            <EditText
                android:id="@+id/edit_subject"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_31sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center_vertical"
                android:hint="Subject"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/dark_gray_Color"
                android:textColorHint="@color/dark_gray_Color"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_below="@id/layout_subject"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/white_bg_grey_outline_rounded_4dp"
            android:elevation="@dimen/_1sdp">

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/rubik_medium"
                android:gravity="start"
                android:hint="Write your message here"
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray_Color"
                android:textColorHint="@color/dark_gray_Color"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_message"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/layout_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_7sdp">

                <TextView
                    android:id="@+id/text_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Cancel"
                    android:textColor="@color/colorDark"
                    android:fontFamily="@font/rubik_medium"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_round"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_7sdp">

                <TextView
                    android:id="@+id/text_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Send"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rubik_medium"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>